<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_floating_material_dark"
    android:orientation="vertical"
    android:id="@+id/main_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:id="@+id/general">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="20dp"
            android:id="@+id/colored_buttons">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/red_button"
                android:button="@drawable/red_point"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_button"
                android:button="@drawable/blue_point"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellow_button"
                android:button="@drawable/yellow_point"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/purple_button"
                android:button="@drawable/purple_point"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/green_button"
                android:button="@drawable/green_point"
                android:layout_marginRight="5dp"

                android:layout_gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aqua_button"
                android:button="@drawable/aqua_point"
                android:layout_gravity="center"/>


        </RadioGroup>
        


