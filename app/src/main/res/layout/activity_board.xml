    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="73dp"
        android:paddingRight="20dp"
        android:id="@+id/line1"
        >



    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/blank_point"
        android:contentDescription=""
        android:id="@+id/first_dot"
        android:onClick="onColorSet">
        </View>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/blank_point"
        android:id="@+id/second_dot"
        android:onClick="onColorSet">
    </View>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/blank_point"
        android:id="@+id/third_dot"
        android:onClick="onColorSet">
    </View>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/blank_point"
        android:id="@+id/fourth_dot"
        android:onClick="onColorSet">
    </View>
        
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonChk"
            android:background="@drawable/button_check"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/button_check"/>
    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@android:color/white">
    </View>


   
    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="34dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:id="@+id/list_item"
        android:transcriptMode="alwaysScroll">
        </ListView>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Give up"
        android:textSize="10sp"
        android:onClick="buttonGiveUp"
        android:id="@+id/btn_giveUp"
        android:visibility="invisible"
        android:background="@drawable/blue_menu_button"/>

    </LinearLayout>